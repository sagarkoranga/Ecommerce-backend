generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model customer_login {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  image     String?
  city      String
  mobile_no String
  orders    Order[]
  cart        Cart[]
  createdAt DateTime @default(now())
}


model Category {
  id       Int       @id @default(autoincrement())
  name     String
  parentId Int?
  parent   Category? @relation("CategoryTree", fields: [parentId], references: [id])
  children Category[] @relation("CategoryTree")
  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Int
  images      String[]
  status      Boolean  @default(true)
  soldCount   Int      @default(0)

  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  orderitems   OrderItem[]
  cartItems   Cart[]
  createdAt   DateTime @default(now())
}

model Cart {
  id        Int      @id @default(autoincrement())
  productId Int
  quantity  Int
  total     Int
  userId    Int     

  product   Product @relation(fields: [productId], references: [id])
  user      customer_login @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, productId])
}
model Order {
  id          Int         @id @default(autoincrement())
  totalAmount Int
  createdAt   DateTime    @default(now())
  userId    Int      
  user      customer_login    @relation(fields: [userId], references: [id])
  items       OrderItem[]
  status      String   @default("PENDING")
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId  Int
  productId Int
  quantity  Int
  price     Int

  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model address {
  id        Int     @id @default(autoincrement())
  name      String
  mobile_no String
  address   String
}


model banners{
  id Int @id @default(autoincrement())
  title String
  image String
  status Boolean @default(true)

}
model testimonials{
  id Int @id @default(autoincrement())
  name String
  image String
  message String
  status Boolean @default(true)

}

model reset_password {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  otpToken  String?
  expiresAt DateTime
  createdAt DateTime @default(now())
}
model password {
  id        Int      @id @default(autoincrement())
  username     String
  otp       String
  otpToken  String?
  expiresAt DateTime
  createdAt DateTime @default(now())
}
model admin {
  id        Int      @id @default(autoincrement())
  username     String   @unique
  password  String
  createdAt DateTime @default(now())
}
model Contact {
  id        Int      @id @default(autoincrement())
  phone     String
  email     String
  address   String
  latitude  Float
  longitude Float
  status    Boolean  @default(true)
  createdAt DateTime @default(now())
}



