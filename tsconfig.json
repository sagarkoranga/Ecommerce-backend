{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "removeComments": true,

    "strict": false,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}